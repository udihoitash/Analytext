    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('.nav-link, .nav-link-mobile, .nav-link-button, .scroll-link, header a, footer a');
            const pages = document.querySelectorAll('.page-content-item');
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');

            function showPage(pageId) {
                // If no pageId is provided, default to home
                if (!pageId) {
                    pageId = 'home';
                }

                pages.forEach(page => {
                    if (page.id === pageId) {
                        page.classList.add('active');
                    } else {
                        page.classList.remove('active');
                    }
                });

                document.querySelectorAll('.nav-link').forEach(link => {
                     link.classList.toggle('active', link.dataset.page === pageId);
                });

                if(mobileMenu) mobileMenu.classList.add('hidden');
                
                // Update title and meta description for SEO
                const activePage = document.querySelector('.page-content-item.active');
                if (activePage) {
                    document.title = activePage.dataset.title || 'Analytext';
                    document.querySelector('meta[name="description"]').setAttribute("content", activePage.dataset.description || '');
                }

                // Scroll to the top of the document
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }

            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    const pageId = link.dataset.page;
                    if (pageId) {
                       e.preventDefault();
                       showPage(pageId);
                    } else if (link.getAttribute('href') === '#features-section') {
                        // Handle internal anchor link scrolling
                        e.preventDefault();
                        document.querySelector('#features-section').scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });
            
            if (mobileMenuButton) {
                mobileMenuButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    mobileMenu.classList.toggle('hidden');
                });
            }
            
            // Show the initial page
            showPage('home');
        });
    </script>

